@model APP.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container-fluid pt-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow">
                <div class="card-body mx-auto">
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Create a new account</h4>
                        <hr />
                        
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col", placeholder = "Email address" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small"})
                            </div>
                        </div>
                        <div class="form-group">
                            
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control col", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small"})
                            </div>
                        </div>
                        <div class="form-group">
                            
                            <div class="col-md-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col", placeholder = "Confirm password" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small"})
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" class="btn btn-default col btn-success" value="Register" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
