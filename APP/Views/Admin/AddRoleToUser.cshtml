@model APP.Models.AddRoleToUserViewModel
@{
    ViewBag.Title = "AddRoleToUser";
}

<div class="container-fluid p-5">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card shadow">
                <div class="card-body mx-auto">
                    <h4 class="text-center">Add role to @Model.SingleUser.Name</h4>
                    <hr />
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <table>
                                @for (int i = 0; i < Model.CheckedUserRoles.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <div class="form-check">
                                                @Html.CheckBoxFor(m => m.CheckedUserRoles[i].IsChecked, new { @class = "checkbox" })  @Model.CheckedUserRoles[i].Role.Name
                                                @Html.HiddenFor(m => m.CheckedUserRoles[i].Role.Id)
                                                @Html.HiddenFor(m => m.CheckedUserRoles[i].Role.Name)
                                                @Html.HiddenFor(m => m.SingleUser.Id)
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Modify roles" class="btn btn-default col btn-success" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>