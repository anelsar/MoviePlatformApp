@model APP.Models.DeleteAccountViewModel
@{
    ViewBag.Title = "DeleteAccount";
}



<div class="container-fluid pt-5">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card shadow">
                <div class="card-body mx-auto">
                    <h4 class="text-center">Are you sure you want to delete your account?</h4>
                    <div>

                        <hr />
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Password, new { @class = "form-control col", placeholder = "Enter password" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger small" })
                    </div>
                            <div class="form-actions no-color">

                                <input type="submit" value="Delete" class="btn btn-default col btn-danger" />

                            </div>

                        }
                        <div class="mt-2">
                            @Html.ActionLink("Back to profile management", "Index")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>